{
  "name": "schimatos-desktop-distribution",
  "version": "v0.0.2",
  "description": "Desktop distribution of the Schímatos application",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc && cross-env NODE_ENV=production webpack --progress --color",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schimatos/desktop-distribution.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schimatos/desktop-distribution/issues"
  },
  "homepage": "https://github.com/schimatos/desktop-distribution#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "copy-webpack-plugin": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-forge": "^5.2.4",
    "html-webpack-plugin": "^5.2.0",
    "loader-utils": "^2.0.0",
    "lodash": "^4.17.21",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "typescript": "^4.2.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "build": {
    "appId": "com.schimatos.desktop-distribution",
    "productName": "Schímatos Desktop",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "dmg",
      "publish": [
        "github"
      ]
    },
    "win": {
      "target": "nsis",
      "asar": true,
      "publish": [
        "github"
      ]
    },
    "linux": {
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1",
    "publish": {
      "provider": "github",
      "always": true,
      "releaseType": "draft"
    }
  }
}
