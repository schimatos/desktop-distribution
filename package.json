{
  "name": "@schimatos/desktop",
  "version": "0.0.0-development",
  "description": "Desktop distribution of the Schimatos Application",
  "scripts": {
    "test:coverage": "npm test -- --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges",
    "test": "jest",
    "lint": "eslint src/** __tests__/** --ext .ts --ext .tsx",
    "lint:fix": "eslint src/** __tests__/** --ext .ts --ext .tsx --fix",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --progress --color",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/schimatos/desktop-distribution.git"
  },
  "keywords": [],
  "author": "Jesse Wright <jesse.wright@anu.edu.au>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schimatos/desktop-distribution/bugs"
  },
  "homepage": "https://github.com/schimatos/desktop-distribution#readme",
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "build-logic-statement-ts": "^1.1.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^11.1.1",
    "electron-builder": "^22.9.1",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "html-webpack-plugin": "^4.5.2",
    "jest": "^26.6.3",
    "lodash": "^4.17.20",
    "pre-commit": "^1.2.2",
    "semantic-release": "^17.3.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.3",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "pre-commit": [
    "lint",
    "build",
    "test"
  ],
  "release": {
    "branches": [
      "main",
      "+([0-9])?(.{+([0-9]),x}).x",
      "next",
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "dependencies": {
    "@ldfields/default-react": "^0.0.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "shacl-form-react": "^1.0.0-alpha.1"
  },
  "build": {
    "appId": "com.schimatos.desktop",
    "productName": "Sch√≠matos Desktop",
    "directories": {
      "app": "./dist/",
      "output": "./out/",
      "main": "./dist/main.bundle.js"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "asar": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "buildVersion": "1"
  }
}
