  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schimatos/desktop-distribution/bugs"
  },
  "homepage": "https://github.com/schimatos/desktop-distribution#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "copy-webpack-plugin": "^8.0.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "electron-forge": "^5.2.4",
    "html-webpack-plugin": "^5.2.0",
    "jest": "^26.6.3",
    "lodash": "^4.17.21",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "rimraf": "^3.0.2",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.5.0"
  },
  "build": {
    "appId": "com.schimatos.desktop",
    "productName": "Sch√≠matos Desktop",
    "directories": {
      "app": "./dist/",
      "output": "./out/"
    },
    "mac": {
      "target": "dmg"
